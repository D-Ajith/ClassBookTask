generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      Role       @default(USER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  auditLogs AuditLog[]
  bookings  Booking[]

  @@map("users")
}

model Class {
  id          String    @id @default(cuid())
  name        String
  description String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sessions    Session[]

  @@map("classes")
}

model Session {
  id        String     @id @default(cuid())
  classId   String
  date      DateTime
  capacity  Int
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  auditLogs AuditLog[]
  bookings  Booking[]
  class     Class      @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Booking {
  id        String   @id @default(cuid())
  userId    String
  sessionId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
  @@map("bookings")
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  userId    String
  sessionId String?
  details   String?
  createdAt DateTime @default(now())
  session   Session? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

enum Role {
  USER
  ADMIN
}
